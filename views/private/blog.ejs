<% if(posts.length>0){ %>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">داشبورد</h1>

    </div>
    <h2>پیام ها</h2>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">عنوان</th>
                    <th scope="col">متن پست</th>
                    <th scope="col">وضعیت</th>
                    <th scope="col">تاریخ</th>
                    <th scope="col">ویرایش</th>
                    <th scope="col">حذف</th>
                </tr>
            </thead>
            <tbody>
                <% for(let post of posts){ %>
                    <tr>
                        <td>
                            <%= post.title %>
                        </td>
                        <td>
                            <%- post.text %>
                        </td>
                        <td>
                            <div class="badge <% if(post.status==='public') {%>badge-success<% }else{ %>badge-warning<% } %>">

                                <% if(post.status==="public") {%>عمومی
                                    <% }else{ %>خصوصی
                                        <% } %>
                            </div>
                        </td>
                        <td>
                            <%= formatDate(post.createAt) %>
                        </td>
                        <td>
                            <a href="/dashboard/edit-post/<%= post._id  %>" class="fa fa-edit alert-dark"></a>
                        </td>
                        <td>
                            <a href="/dashboard/delete-post/<%= post._id  %>" class="fa fa-trash alert-danger"></a>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <%- include("../includes/pagination.ejs") %>

        <% } else { %>
            <div class="text-center">
                <h3 class="mt-2">
                    در حال حاضر هیچ پستی توسط شما در پایگاه داده ثبت نشده است
                </h3>
            </div>
            <% } %>