<main class="form-signin w-100 m-auto text-center">
    <%- include("../includes/loginErrors.ejs") %>
        <form action="/users/resetPassword/<%= userId %>" method="POST">
            <h1 class="h3 mb-3 fw-normal">بازیابی رمز عبور</h1>

            <div class="form-floating mb-3">
                <label for="pass">رمز عبور جدید</label>
                <input name="pass" type="password" class="form-control" id="pass">
            </div>

            <div class="form-floating mb-3">
                <label for="confirmPass">تکرار رمز عبور جدید</label>
                <input name="confirmPass" type="password" class="form-control" id="confirmPass">
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">تغییر رمز عبور</button>


        </form>
</main>